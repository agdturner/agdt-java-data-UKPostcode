    <distributionManagement>
        <!-- This creates a maven artifact in the target directory which can 
        then be added to a repository. -->
        <repository>
            <id>internal</id>
            <url>file://${project.build.directory}/mvn-repo</url>
        </repository>
    </distributionManagement>
</project>
